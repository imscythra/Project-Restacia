<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Project_Restacia_UWP.Views.ExplorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Project_Restacia_UWP.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="using:CommunityToolkit.WinUI"
    xmlns:media="using:CommunityToolkit.WinUI.Media"
    mc:Ignorable="d">

    <Page.Resources>
        <media:AttachedCardShadow x:Key="CommonShadow"
                                  Offset="4" Color="White"/>
    </Page.Resources>
    <ScrollViewer>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Border x:Name="shadowTarget"/>
            <Grid Margin="20,20,20,16" Height="320" VerticalAlignment="Top"
              CornerRadius="12" ui:Effects.Shadow="{StaticResource CommonShadow}">
                <FlipView Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
                    <Grid VerticalAlignment="Stretch" Padding="32,0">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://i.pinimg.com/originals/be/f4/84/bef484c1c2679790df69058bcd570d53.jpg"
                                    Stretch="UniformToFill" />
                        </Grid.Background>
                        <Rectangle Fill="Black" Opacity="0.3" Margin="-32,0"/>
                        <StackPanel VerticalAlignment="Center" Margin="0,0,150,0">
                            <TextBlock Style="{ThemeResource TitleTextBlockStyle}">Announcing Developer Preview for Restacia</TextBlock>
                            <TextBlock Text="Here's a fresh insider preview from the developer, see what's new" FontWeight="SemiBold"
                                   TextWrapping="Wrap"/>
                            <Grid HorizontalAlignment="Left" CornerRadius="4" Margin="0,16,0,0">
                                <Grid.Background>
                                    <AcrylicBrush TintColor="Black" TintOpacity="0.1"/>
                                </Grid.Background>
                                <Button Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xe970;" FontSize="16"/>
                                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Margin="6,0,0,0">See more</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>

                    <Grid VerticalAlignment="Stretch" Padding="32,0">
                        <Grid.Background>
                            <ImageBrush ImageSource="https://i.redd.it/f0mpjw4ddzv41.png"
                    Stretch="UniformToFill"/>
                        </Grid.Background>
                        <Rectangle Fill="Black" Opacity="0.3" Margin="-32,0"/>
                        <StackPanel VerticalAlignment="Center" Margin="0,0,150,0">
                            <TextBlock Style="{ThemeResource TitleTextBlockStyle}">Listen to our collections</TextBlock>
                            <TextBlock Text="Tons of inspiring, healing and motivational music to accompany" FontWeight="SemiBold"
                   TextWrapping="Wrap"/>
                            <Grid HorizontalAlignment="Left" CornerRadius="4" Margin="0,16,0,0">
                                <Grid.Background>
                                    <AcrylicBrush TintColor="Black" TintOpacity="0.1"/>
                                </Grid.Background>
                                <Button Padding="12,6">
                                    <StackPanel Orientation="Horizontal">
                                        <FontIcon Glyph="&#xe970;" FontSize="16"/>
                                        <TextBlock Style="{ThemeResource BaseTextBlockStyle}" Margin="6,0,0,0">See more</TextBlock>
                                    </StackPanel>
                                </Button>
                            </Grid>
                        </StackPanel>
                    </Grid>
                    <ui:Effects.Shadow>
                        <ui:AttachedDropShadow CastTo="{x:Bind shadowTarget}" Color="WhiteSmoke"
                                        BlurRadius="48" Opacity="0.3"/>
                    </ui:Effects.Shadow>
                </FlipView>
            </Grid>

            <StackPanel Grid.Row="1" Margin="40">
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Margin="12,0,0,18">Recently posted</TextBlock>
                <GridView>
                    <Button Click="article1btn_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                                MaxWidth="388" Margin="2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///media/article1.png" Width="388" Height="200"
                                                           Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Meditate with these activities!"
                                                               Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0" TextWrapping="Wrap">
                                                        An ultimate list covering all the possible activities you can do to relax and meditate.
                            </TextBlock>
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="by Sarah Najihah"
                                                               Margin="24,0,24,24" FontStyle="Italic"/>
                        </StackPanel>
                    </Button>
                    <Button Click="article2btn_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                                                    Width="388">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///media/article2.png" Width="388" Height="200"
                           Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Spotify 🤝 Restacia"
                               Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0" TextWrapping="Wrap">Have you listened to these collections picked by us? Take a moment to listen!</TextBlock>
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="by Noor Fakhri"
                               Margin="24,0,24,24" FontStyle="Italic"/>
                        </StackPanel>
                    </Button>

                    <Button Click="article3btn_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                                     Width="388">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///media/article4.png" Width="388" Height="200"
            Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="When dietary meets psychology"
                Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0" TextWrapping="Wrap">Have you ever thought of how dietary can affect the way you behave and protude your emotion?</TextBlock>
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="by Sarah Najihah"
                Margin="24,0,24,24" FontStyle="Italic"/>
                        </StackPanel>
                    </Button>

                    <Button Click="article4btn_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                                                    Width="388">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///media/article3.png" Width="388" Height="200"
                           Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="An emotional care tip"
                               Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0" TextWrapping="Wrap">Feeling depressed? Anxious? Don't be upset dear, we're here to help you! 🤗</TextBlock>
                            <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" Text="by Sarah Najihah"
                               Margin="24,0,24,24" FontStyle="Italic"/>
                        </StackPanel>
                    </Button>
                    
                </GridView>
                <TextBlock Style="{ThemeResource BodyStrongTextBlockStyle}" TextAlignment="Center" Margin="0,24,0,0">Hmm... that's all we have here.</TextBlock>
                <TextBlock Style="{ThemeResource CaptionTextBlockStyle}" TextAlignment="Center" Margin="0,0,0,24">Stay tuned for more articles!</TextBlock>
                <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Margin="12,24,0,18">Activities</TextBlock>
                <GridView>
                    <Button Click="act1_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                         Width="220" Margin="0,2,2,2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///Assets/activity (2).png" Width="220" Height="200"
Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="slowroads.io"
    Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0,24,24" TextWrapping="Wrap">An infinite zen of driving. Directly within Restacia app.</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Click="act2_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                         Width="220" Margin="2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///Assets/activity (3).png" Width="220" Height="200"
Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Gradiyent"
    Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0,24,24" TextWrapping="Wrap">A mindful live wallpaper of gradient colours. Meditateful.</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Click="act3_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                         Width="220" Margin="2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///Assets/activity (4).png" Width="220" Height="200"
Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Inhale. Exhale."
    Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0,24,24" TextWrapping="Wrap">Guided breathing exercise to help give you chills. Relax. Calm. </TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Click="act4_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                         Width="220" Margin="2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///Assets/activity (5).png" Width="220" Height="200"
Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="crazygames.com"
    Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0,24,24" TextWrapping="Wrap">A home to various meditation games around thee globe.</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button Click="act5_Click" Background="{ThemeResource CardBackgroundFillColorDefault}" Padding="0" CornerRadius="12"
                         Width="220" Margin="2">
                        <StackPanel Spacing="4">
                            <Image Source="ms-appx:///Assets/activity (1).png" Width="220" Height="200"
Stretch="UniformToFill"/>
                            <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="Submit an activity"
    Margin="24,24,24,2"/>
                            <TextBlock Opacity="0.7" Margin="24,0,24,24" TextWrapping="Wrap">Have an idea or recommendation for us? Leave a feedback.</TextBlock>
                        </StackPanel>
                    </Button>
                </GridView>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
